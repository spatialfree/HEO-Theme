{% if section.settings.image != blank %}

	<div style="display: flex; align-items: center; width:100%; height:512px; background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0), rgba(255, 255, 255, 1)), url({{ section.settings.image | img_url: 'master' }}); background-position: center; background-position-y: 30%; background-size: cover;">
      <div class="full-title">{{ section.settings.title }}</div>
	</div>

<style>
	.full-title {
		margin: 0 auto;
     	text-align: center;
     	color: white;
     	font-size: 3em;
     	font-weight: bold;
     	text-shadow: 0px 2px 4px #00000082;
	}
</style>

{% endif %}


{% schema %}
{
  "name": "Full Image",
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Full-span Image"
    }
  ],
  "presets": [
    {
      "name": "Full Image",
      "category": "Image"
    }
  ]
}
{% endschema %}
